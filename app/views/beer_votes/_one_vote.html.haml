.beer_vote{ :id => "vote#{beer_vote.id}" }
  %h3
    Cerveja
    = beer_vote.title
  = star_rating beer_vote.vote if beer_vote.vote
  .clear
  %p
    - if beer_vote.country
      Pa&iacute;s
      = beer_vote.country
    %span.info
      coment&aacute;rio criado em
      = l(beer_vote.commented_at, :format => :long)
  %p
    Coment&aacute;rio
    = beer_vote.comment if beer_vote.comment
  .photos{ :id => "beer#{beer_vote.id}" }
  .clear
  - if current_user
    %p
      = link_to 'excluir', beer_vote_path(beer_vote), :method => :delete, :confirm => "VocÃª tem certeza?", :title => 'apagar', :class => 'link-delete'

- javascript_tag do
  = "$.getScript('/attachments?html_id=beer#{beer_vote.id}&search[title_equals][]=#{u(beer_vote.title)}');"