.span-22
  %h2 Usuários
  %p
    = link_to "novo usuário", new_admin_user_path, :class => 'link-new'
  .list
    %table
      %tr
        %th Id
        %th login
        %th #
      - @users.each do |user|
        %tr
          %td= link_to user.id, edit_admin_user_path(user)
          %td= link_to user.login, edit_admin_user_path(user)
          %td
            = link_to "ver", user_path(user), :class => 'link-show'
            ou
            = link_to "excluir", admin_user_path(user), :method => 'delete', :confirm => 'Tem certeza que deseja excluir este item? Não será possível voltar atrás.', :class => 'link-delete'
